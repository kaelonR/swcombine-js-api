{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
